<h1>Review for <%= @book.title %></h1>

<p><strong>Review:</strong> <%= @review.content %></p>


<%= link_to "Edit Review", edit_book_review_path(@book, @review), class:"btn btn-primary" %>
<%= link_to "Destroy Review", book_review_path(@book, @review), class:"btn btn-danger", method: :delete, data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
            } %>

<br><br>

<hr>
<br>
<%= link_to 'Back to All My Reviews', reviews_my_reviews_path, class:"btn btn-primary" %>
<%= link_to 'Back to Book Catalog', books_path(@book), class:"btn btn-primary" %>