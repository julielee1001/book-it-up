<% if @list.present? %>
    <div class="form-container">
        <%= form_with model: @list do |form| %>

            <div>
                <%= form.label :name %><br>
                <%= form.text_field :name, :class => "form-control" %>
                <% @list.errors.full_messages_for(:name).each do |message| %>
                <div><%= message %></div>
                <% end %>
            </div>
            <br>
            <div>
                <%= form.label :description %><br>
                <%= form.text_area :description, :class => "form-control" %><br>
                <% @list.errors.full_messages_for(:description).each do |message| %>
                <div><%= message %></div>
                <% end %>
            </div>

            <div>
                <%= form.label :picture, "Add a cover photo!" %> <br>
                <%= form.file_field :picture, :class =>"form-control" %>
                <br>
            </div>

                <%= form.submit "Submit", :class=> 'btn btn-primary' %>
        <% end %>
    </div>
    
<% else %>    
    <p>There was an error loading the list.</p>
<% end %>