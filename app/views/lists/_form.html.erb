<%= form_with model: list do |form| %>

        <div>
          <%= form.label :name %><br>
          <%= form.text_field :name %>
          <% list.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      
        <div>
          <%= form.label :description %><br>
          <%= form.text_area :description %><br>
          <% list.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
  
        <br>
  
        <div>
          <%= form.submit %>
        </div>
      <% end %>